@model PlataformaEducativa.Models.Unidad

@{
    ViewData["Title"] = "Detalles de Unidad";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Unidades" asp-action="Index" asp-route-materiaId="@Model.MateriaId">@Model.Materia.Nombre</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Nombre</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Descripción:</dt>
                <dd class="col-sm-10">@Model.Descripcion</dd>
                <dt class="col-sm-2">Orden:</dt>
                <dd class="col-sm-10">@Model.Orden</dd>
                <dt class="col-sm-2">Fecha de Creación:</dt>
                <dd class="col-sm-10">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                <dt class="col-sm-2">Última Modificación:</dt>
                <dd class="col-sm-10">@Model.UltimaModificacion.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
