@model PlataformaEducativa.Models.Materia

@{
    ViewData["Title"] = "Unidades";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Unidades de @Model.Nombre</h2>
        <a asp-action="Create" asp-route-materiaId="@Model.MateriaId" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Unidad
        </a>
    </div>

    <div class="row">
        @if (Model.Unidades != null && Model.Unidades.Any())
        {
            foreach (var unidad in Model.Unidades.OrderBy(u => u.Orden))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@unidad.Nombre</h5>
                        </div>
                        <div class="card-body">
                            <p>@unidad.Descripcion</p>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@unidad.UnidadId" class="btn btn-outline-primary">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-controller="Subtemas" asp-action="Index" asp-route-unidadId="@unidad.UnidadId" class="btn btn-outline-success">
                                    <i class="fas fa-list"></i> Subtemas
                                </a>
                                <a asp-action="Edit" asp-route-id="@unidad.UnidadId" class="btn btn-outline-secondary">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@unidad.UnidadId" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No hay unidades disponibles. ¡Crea la primera unidad!
                </div>
            </div>
        }
    </div>
</div>